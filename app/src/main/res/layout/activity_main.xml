<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/verdesito"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/verde"
        />
    <TextView
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:text="Kasandra Mtz V"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/verdesito"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/space"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/verdesito"
        app:layout_constraintBottom_toTopOf="@id/rojito"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <View
        android:id="@+id/azul1"
        android:layout_width="30dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/verdesito"
        app:layout_constraintBottom_toTopOf="@id/rojito"
        app:layout_constraintEnd_toStartOf="@+id/space"
        android:background="@color/azul"
        />
    <View
        android:id="@+id/azul2"
        android:layout_width="30dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/verdesito"
        app:layout_constraintBottom_toTopOf="@id/rojito"
        app:layout_constraintStart_toEndOf="@+id/space"
        android:background="@color/azul"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rojito"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/rojo"/>
</androidx.constraintlayout.widget.ConstraintLayout>